{
	"name": "server",
	"version": "0.0.1",
	"type": "module",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"build": "pnpm exec esbuild src/dev.ts --bundle --packages=external --platform=node --format=esm --target=node22 --outfile=dist/index.js",
		"dev:db:migrate": "cross-env NODE_ENV=development npx drizzle-kit migrate",
		"dev:db:generate": "cross-env NODE_ENV=development npx drizzle-kit generate",
		"dev:db:drop": "cross-env NODE_ENV=development npx drizzle-kit drop",
		"dev": "cross-env NODE_ENV=development tsx watch src/dev.ts",
		"prod:db:migrate": "cross-env NODE_ENV=production npx drizzle-kit migrate",
		"prod:db:generate": "cross-env NODE_ENV=production npx drizzle-kit generate",
		"prod:db:drop": "cross-env NODE_ENV=production npx drizzle-kit drop",
		"prod:build": "cross-env NODE_ENV=production pnpm run build",
		"prod": "cross-env NODE_ENV=production node dist/index.js"
	},
	"dependencies": {
		"@hono/node-server": "^1.19.6",
		"@hono/zod-validator": "^0.7.5",
		"better-auth": "^1.4.3",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.44.7",
		"drizzle-zod": "^0.8.3",
		"hono": "^4.7.11",
		"hono-pino": "^0.10.3",
		"@google-cloud/vertexai": "^1.7.0",
		"google-auth-library": "^9.15.0",
		"pg": "^8.16.3",
		"pino": "^10.1.0",
		"postgres": "^3.4.7",
		"shared": "workspace:*",
		"zod": "^4.1.13",
		"zod-validation-error": "^5.0.0"
	},
	"devDependencies": {
		"@types/node": "^22.0.0",
		"cross-env": "^10.1.0",
		"drizzle-kit": "^0.31.7",
		"esbuild": "^0.25.0",
		"tsx": "^4.19.0"
	}
}
