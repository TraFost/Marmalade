{
	"name": "marmalade",
	"version": "0.0.1",
	"description": "Voice-based mental health companion that remembers you over time.",
	"author": "Rahman Nurudin",
	"license": "MIT",
	"homepage": "https://github.com/TraFost/marmalade",
	"packageManager": "pnpm@9.0.0",
	"workspaces": [
		"./server",
		"./client",
		"./shared"
	],
	"scripts": {
		"dev": "turbo dev",
		"dev:client": "turbo dev --filter=client",
		"dev:server": "turbo dev --filter=server",
		"build": "turbo build",
		"build:client": "turbo build --filter=client",
		"build:server": "turbo build --filter=server",
		"lint": "turbo lint",
		"type-check": "turbo type-check",
		"test": "turbo test",
		"postinstall": "turbo build --filter=shared --filter=server"
	},
	"keywords": [
		"hono",
		"react",
		"vite",
		"monorepo",
		"turbo",
		"pnpm"
	],
	"devDependencies": {
		"turbo": "^2.5.5"
	},
	"peerDependencies": {
		"typescript": "^5.7.3"
	}
}
